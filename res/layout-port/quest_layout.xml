<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/layout" android:background="@color/mcactivity_mainbg">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:id="@+id/desc"
            android:gravity="center"
            android:textSize="@dimen/button_text_size"
            android:layout_margin="20dp"
            android:textColor="@color/mcactivity_desctextcolor"
            android:background="@color/mcactivity_desctextbg" android:paddingTop="26dp" android:paddingBottom="26dp"
            android:paddingLeft="16dp" android:paddingRight="16dp"/>

	<Button android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/submit"
			android:id="@+id/SubmitButton"
			android:textSize="20sp" android:paddingLeft="20dp"
			android:paddingRight="20dp" android:paddingTop="10dp" android:paddingBottom="10dp"
			android:background="@color/mcactivity_answertextbg" android:layout_gravity="right"
			android:layout_alignParentBottom="true" android:layout_alignParentRight="false"
			android:layout_alignParentEnd="false" android:textColor="@color/mcactivity_answertextcolor"/>
    <LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/fragmentContainer"
			android:layout_below="@+id/desc"
			android:layout_alignParentStart="true"
			android:layout_above="@+id/SubmitButton"
			android:orientation="vertical">
    </LinearLayout>
</RelativeLayout>