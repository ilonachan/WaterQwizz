<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

<Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:id="@+id/button10"/>
<EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Question"
        android:id="@+id/editText1" android:layout_gravity="center_horizontal"/>
<EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="right Answer"
        android:id="@+id/editText2" android:layout_gravity="center_horizontal"/>
<EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="wrong Answer"
        android:id="@+id/editText3" android:layout_gravity="center_horizontal"/>
<EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="wrong Answer"
        android:id="@+id/editText4" android:layout_gravity="center_horizontal"/>
<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        android:id="@+id/button1" android:layout_gravity="right"/>
</LinearLayout>