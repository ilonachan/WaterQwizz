<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent">

	<Button android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Answer 1"
			android:id="@+id/answer1" android:layout_gravity="center_horizontal"
			android:background="@color/mcactivity_answertextbg" android:textColor="@color/mcactivity_answertextcolor"
			android:layout_weight="1" android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>
	<Button android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Answer 2"
			android:id="@+id/answer2" android:background="@color/mcactivity_answertextbg"
