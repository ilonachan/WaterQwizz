	<Button android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Answer 3"
			android:id="@+id/answer3" android:layout_gravity="center_horizontal"
			android:background="@color/mcactivity_answertextbg" android:textColor="@color/mcactivity_answertextcolor"
			android:layout_weight="1" android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>
	<Button android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Answer 4"
			android:id="@+id/answer4" android:layout_gravity="center_horizontal"
			android:background="@color/mcactivity_answertextbg" android:textColor="@color/mcactivity_answertextcolor"
			android:layout_weight="1" android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>
