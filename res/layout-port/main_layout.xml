<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="@drawable/wasser">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" android:layout_weight="1"
            android:src="@drawable/icon"
            android:padding="20dp" android:layout_centerHorizontal="true"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:id="@+id/t"
            android:layout_below="@+id/imageView">
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gameStart"
                android:id="@+id/startButton"
                android:textSize="27sp"
                android:textColor="@color/mainactivity_buttontextcolor" android:layout_weight="1"
                android:background="#aaffffff"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gameManual"
                android:id="@+id/manualButton"
                android:textSize="27sp"
                android:textColor="@color/mainactivity_buttontextcolor" android:layout_weight="1"
                android:background="#aaffffff"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/credits"
                android:id="@+id/creditsButton" android:layout_gravity="center_horizontal"
                android:textSize="27sp"
                android:textColor="@color/mainactivity_buttontextcolor" android:layout_weight="1"
                android:background="#aaffffff"/>
    </LinearLayout>

</RelativeLayout>