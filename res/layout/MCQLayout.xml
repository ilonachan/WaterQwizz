<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/layout" android:background="@color/MCActivity_mainBG">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wann beginnt das SummerCamp 2016?"
            android:id="@+id/desc"
            android:gravity="center"
            android:textSize="32sp"
            android:padding="16dp"
            android:layout_margin="20dp"
            android:textColor="@color/MCActivity_descTextColor"
            android:background="@color/MCActivity_descTextBG"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="60dp" android:id="@+id/answers">

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10.7.2016"
                android:id="@+id/answer1"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:background="@color/MCActivity_answerTextBG"
                android:layout_marginTop="5dp" android:textColor="@color/MCActivity_answerTextColor"/>

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11.7.2016"
                android:id="@+id/answer2"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:background="@color/MCActivity_answerTextBG"
                android:layout_marginTop="5dp" android:textColor="@color/MCActivity_answerTextColor"/>

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12.7.2016"
                android:id="@+id/answer3"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@color/MCActivity_answerTextBG"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" android:textColor="@color/MCActivity_answerTextColor"/>

    </LinearLayout>
</LinearLayout>